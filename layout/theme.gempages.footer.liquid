    <script>
      (function() {
        var updateCart = function() {
          var counter = 0;
          var interval = setInterval(function() {
            fetch(`${window.themeVariables.routes.cartUrl}.js`).then(
              async (response2) => {
                const cartContent = await response2.json();
                document.documentElement.dispatchEvent(
                  new CustomEvent("cart:updated", {
                    bubbles: true,
                    detail: {
                      cart: cartContent,
                    },
                  })
                );
                // cartContent["sections"] = responseJson["sections"];
                document.documentElement.dispatchEvent(
                  new CustomEvent("cart:refresh", {
                    bubbles: true,
                    detail: {
                      cart: cartContent,
                	  replacementDelay: 650,
                    },
                  })
                );
              }
            );

            if (counter > 2) clearInterval(interval);
            counter++;
          }, 500);
        };

        var removeDiscount = function() {
          fetch('/checkout?discount=null');
          updateCart();
        };

        window.addEventListener('sc:discount.calculated', updateCart);
        window.addEventListener('sc:discount.remove', removeDiscount);
      })();
