                                    <p lang="de" class="heading heading--small">{{ section.settings.title_3 | escape }}</p>
                                </div>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.custom_icon_4 != blank -%}
