                                {%- endif -%}
                            </div>
                            {%- if section.settings.title_2 != blank -%}
                                <div class="fact__title">
                                    <p class="heading heading--small">{{ section.settings.title_2 | escape }}</p>
                                </div>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.custom_icon_3 != blank -%}
                        <div class="fact__item">
                            <div class="fact-icon">
                                {%- if section.settings.custom_icon_3 != blank -%}
