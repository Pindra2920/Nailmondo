<section class="ed-product-facts">
    <div class="section">
        <div class="container">
            <div class="product__facts" style="background-color: {{ section.settings.background_product_facts }}">
                {%- if section.settings.subheading != blank or section.settings.title != blank -%}
                    <header class="section__header container text-container">
                        {%- if section.settings.subheading != blank -%}
                            <h2 class="heading heading--small">{{ section.settings.subheading | escape }}</h2>
                        {%- endif -%}

                        {%- if section.settings.title != blank -%}
                            <h3 class="heading h2">{{ section.settings.title | escape }}</h3>
                        {%- endif -%}
                    </header>
                {%- endif -%}
                <div class="product__facts__container ed-product__facts__container--{{ section.settings.icon_in_row }} title_position--{{ section.settings.title_position }}" style="background-color: {{ section.settings.background_box_product_facts }}">
                    {%- if section.settings.custom_icon_1 != blank -%}
                        <div class="fact__item">
                            <div class="fact-icon">
                                {%- if section.settings.custom_icon_1 != blank -%}
                                    {% capture custom_icon_width_1 %}{{ section.settings.custom_icon_width_1 | times: 2 }}x{% endcapture %}
                                    <img class="fact__icon__custom-icon" style="max-width: {{ section.settings.custom_icon_width_1 }}px;  max-height: {{ section.settings.custom_icon_width_1 }}px" width="{{ section.settings.custom_icon_1.width }}" height="{{ section.settings.custom_icon_1.height }}" src="{{ section.settings.custom_icon_1 | img_url: custom_icon_width_1 }}" alt="{{ section.settings.custom_icon_1.alt | escape }}">
                                {%- endif -%}
                            </div>
                            {%- if section.settings.title_1 != blank -%}
                                <div class="fact__title">
                                    <p class="heading heading--small">{{ section.settings.title_1 | escape }}</p>
                                </div>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.custom_icon_2 != blank -%}
                        <div class="fact__item">
                            <div class="fact-icon">
                                {%- if section.settings.custom_icon_2 != blank -%}
