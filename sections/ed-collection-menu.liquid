{% if section.blocks.size != 0 %}
    <div class="ed-collection-menu-inner">
        {% for block in section.blocks %}
            {% if collection.url == block.settings.url %}
                {% assign bg_color = block.settings.bg_color_active %}
                {% assign font_color = block.settings.font_color_active %}
            {% else %}
                {% assign bg_color = block.settings.bg_color %}
                {% assign font_color = block.settings.font_color %}
            {% endif %}

            <div class="menu-item {% if collection.url == block.settings.url %}current{% endif %}"
                 style="background-color: {{ bg_color }}">
                <div class="menu-item-inner">
                    <a href="{{ block.settings.url }}"
                       style="color: {{ font_color }}">{{ block.settings.label }}</a>
                </div>
            </div>
        {% endfor %}
    </div>

    <style>
        :root {
            --ed-collection-menu-height: 50px;
        }
    </style>
{% endif %}

