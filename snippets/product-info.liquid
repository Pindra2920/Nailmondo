{% endif %}

{%- capture product_form_id -%}product-form-{{ section.id }}-{{ product.id }}{%- endcapture -%}

{% if section.settings.show_application_steps %}
  <div class="ed-application-steps-snippet">
    {% render 'ed-application-steps',
      application_steps_image_1: section.settings.application_steps_image_1,
      application_steps_image_2: section.settings.application_steps_image_2,
      application_steps_image_3: section.settings.application_steps_image_3,
      application_steps_image_4: section.settings.application_steps_image_4,
      application_steps_text_1: section.settings.application_steps_text_1,
      application_steps_text_2: section.settings.application_steps_text_2,
      application_steps_text_3: section.settings.application_steps_text_3,
      application_steps_text_4: section.settings.application_steps_text_4,
      application_steps_background: section.settings.application_steps_background,
      application_steps_color: section.settings.application_steps_color,
      font_size_application_steps: section.settings.font_size_application_steps
    %}
  </div>
{% endif %}
<div class="product_info_wrapper">
  <div
    class="product__info {% if section.settings.enable_buy_box %}ed-buy-box{% endif %}"
    {% if section.settings.enable_buy_box %}
      style="
        border-color: {{ section.settings.buy_box_border_color }};
        background-color: {{ section.settings.buy_box_bg_color }};
        border-radius: {{ section.settings.buy_box_border_radius | append: 'px' }};
      "
    {% endif %}
  >
    {% comment %} ELBDEV: BUY BOX {% endcomment %}

    {% if section.settings.enable_social_proof %}
      <div
        class="ed-social-proof-banner"
        style="
          background-color: {{ section.settings.social_proof_background }};
          {% if section.settings.enable_buy_box %}
                  border-top-left-radius: {{ section.settings.buy_box_border_radius | append: 'px' }};
                  border-top-right-radius: {{ section.settings.buy_box_border_radius | append: 'px' }};
          {% else %}
          border-radius: {{ section.settings.social_proof_box_style }};
          {% endif %}
        "
      >
        {% render 'ed-social-proof-banner',
          img_1: section.settings.social_proof_image_1,
          img_2: section.settings.social_proof_image_2,
          text_social_proof: section.settings.text_social_proof,
          ppl_social_proof: section.settings.ppl_social_proof,
          enable_text_bold: section.settings.enable_text_bold,
          enable_insta_checkmark: section.settings.enable_insta_checkmark,
          social_proof_text: section.settings.social_proof_text
        %}
      </div>
    {% endif %}

    <!-- PRODUCT META -->
    <product-meta form-id="{{ product_form_id }}" price-class="price--large" class="product-meta">
      {%- if section.settings.show_vendor -%}
        <h2 class="product-meta__vendor heading heading--small">
          {%- assign vendor_handle = product.vendor | handle -%}
          {%- assign vendor_collection = collections[vendor_handle] -%}

          {%- if vendor_collection != blank -%}
            <a href="{{ vendor_collection.url }}">{{ product.vendor }}</a>
          {%- else -%}
            <a href="{{ product.vendor | url_for_vendor }}">{{ product.vendor }}</a>
          {%- endif -%}
        </h2>
      {%- endif -%}

      {% if settings.enable_badge_pdp %}
        <div class="ed-badge-pdp">
          {% render 'ed-badge',
            product: product,
            color_badge: settings.color_badge_pdp,
            color_badge_text: settings.color_badge_text_pdp
          %}
        </div>
      {% endif %}

      {% unless featured %}
        {% for tag in product.tags %}
          {% if tag contains '__label:' %}
            {% assign label_parts = tag | split: ':' %}
            {% if label_parts.size > 1 %}
              <div class="pdp-label">
                <div class="custom-label-DL">
                  {{ label_parts[1] }}
                </div>
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
        <div
          class="th_prd_wl_btn"
          data-product_id="{{product.id}}"
          data-variant_id="{{product.selected_or_first_available_variant.id}}"
        ></div>
        <h1 class="product-meta__title heading h3">{{ product.title }}</h1>
{% unless product.tags contains 'marketing' %}
  <div class="bewertungsblock">
    <div
      class="ruk_rating_snippet"
      data-sku="{{ product.handle }};{{ product.variants | map: 'sku' | join: ';' }};{{ product.variants | map: 'id' | join: ';' }}"
    ></div>
  </div>
{% endunless %}

        {% if customer and customer.tags contains 'Studiokunde' %}
          {% render 'b2b-hinweise' %}
        {% endif %}

      {% else %}
        <h2 class="product-meta__title heading h3">
          <a href="{{ product.url }}">{{ product.title }}</a>
        </h2>
      {% endunless %}

      {% if settings.show_teaser_on_pdp %}
        {% if product.metafields.standard.product_teaser != blank %}
          <div
            class="product__teaser"
            {% if settings.color_teaser_on_product != 'rgba(0,0,0,0)' %}
              style="color: {{ settings.color_teaser_on_product }}"
            {% endif %}
          >
            {{ product.metafields.standard.product_teaser }}
          </div>
        {%- endif -%}
      {% endif %}
