{% comment %} CHECK FREE SHIPPING AMOUNT {% endcomment %}
{% if settings.cart_free_shipping_threshold != blank %}
  {% assign cart_free_shipping_threshold = settings.cart_free_shipping_threshold | plus: 0 %}
{% else %}
  {% assign cart_free_shipping_threshold = false %}
{% endif %}
{% comment %} END {% endcomment %}

{% assign cart_total_price = cart.total_price | divided_by: 100 %}

{% comment %} CHECK SHIPPING PRICE {% endcomment %}
{% if settings.shipping_price != blank %}
  {% assign shipping_price = settings.shipping_price | times: 1.0 %}
{% else %}
  {% assign shipping_price = 0 %}
{% endif %}
{% comment %} END {% endcomment %}

{% comment %} CHECK IF CALCULATION IS ENABLED {% endcomment %}
{% if settings.calculation_of_free_shipping == false %}
  {% assign shipping_price = 0 %}
{% endif %}
{% comment %} END {% endcomment %}

{% comment %} IF FREE SHIPPING AMOUNT IS REACHED {% endcomment %}
{% if cart_total_price >= cart_free_shipping_threshold and settings.cart_free_shipping_threshold != blank %}
  {% assign shipping_price = 0 %}
{% endif %}
{% comment %} END {% endcomment %}

{% comment %}Calculate discounts based on strike prices{% endcomment %}
{% assign compare_at_price_total_discount = 0 %}
{% assign regular_item_prices = 0 %}
{% for item in cart.items %}
  {% if item.variant.compare_at_price > item.final_price %}
    {% assign compare_at_price_discount = item.variant.compare_at_price
      | minus: item.final_price
      | times: item.quantity
    %}
    {% assign compare_at_price_total_discount = compare_at_price_total_discount | plus: compare_at_price_discount %}
  {% endif %}
  {% if item.variant.compare_at_price > item.final_price %}
    {% assign regular_item_price = item.variant.compare_at_price | times: item.quantity %}
  {% else %}
    {% assign regular_item_price = item.original_price | times: item.quantity %}
  {% endif %}
  {% assign regular_item_prices = regular_item_prices | plus: regular_item_price %}
{% endfor %}
{% assign total_discount = compare_at_price_total_discount | plus: cart.total_discount %}
{% assign regular_item_prices_plus_shipping = regular_item_prices | plus: shipping_price %}
{% comment %}END{% endcomment %}

{% comment %} CALCULATE ALWAYS TOTAL CART PRICE {% endcomment %}
{% assign final_cart_total_price = cart.total_price | plus: shipping_price %}
{% comment %} END {% endcomment %}

