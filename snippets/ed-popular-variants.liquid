<style>

    {%- for variant in product.variants -%}
        {% if variant.metafields.standard.popular_variant %}

            {% if section.settings.popular_variants_text != blank %}

                #shopify-section-{{ section.id }} .product-form__option-info {
                    margin-bottom: 15px;
                }

            {% endif %}



            {%- for pre_selected_option in variant.options -%}

                #shopify-section-{{ section.id }} product-variants[handle='{{ product.handle }}'] .ed-option-{{ pre_selected_option }} {
                    position: relative;
                }

                #shopify-section-{{ section.id }} product-variants[handle='{{ product.handle }}'] .ed-option-{{ pre_selected_option }} .ed-popular-variant {
                    display: block;
                }

            {% endfor %}

        {% break %}
        {% endif %}
    {% endfor %}

</style>