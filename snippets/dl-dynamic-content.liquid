<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Funktion, um die URL-Parameter zu √ºberpr√ºfen
    function getUrlParameter(name) {
        name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
        var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
        var results = regex.exec(window.location.search);
        return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    }

    // √úberpr√ºfen, ob utm_source=google oder utm_campaign=google_campaign in der URL ist
    var utmSource = getUrlParameter('utm_source');
    var utmCampaign = getUrlParameter('utm_campaign');

    if (utmSource === 'dennis' || utmCampaign === 'google_campaign') {
        document.getElementById('google-utm-bar').style.display = 'block';
    }
  });
</script>


